# Frontend Service (Vite Build + Static Server)
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./
RUN npm ci

# Copy source and build
COPY frontend/ ./
RUN npm run build

# Production stage - serve with simple static server
FROM node:18-alpine
WORKDIR /app
CMD npx serve -s dist -l ${PORT}
